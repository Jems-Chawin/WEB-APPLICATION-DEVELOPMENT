@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Title</title>
    <style>
        body {
            padding-left: 50px;
        }

        .output {
            padding: 20px;
            border: solid;
        }
    </style>
</head>

<body>
    <form method="POST" asp-action="Index">
        <fieldset>
            <legend><i>Contact Information</i></legend>
            <label>First name:</label><input name="fname" id="fname" type="text"><br>
            <label>Last name:</label><input name="lname" id="lname" type="text"><br>
            <label>E-mail:</label><input name="email" id="email" type="text">
        </fieldset>
        <fieldset>
            <legend><i>Competition Question</i></legend>
            <p>How tall is the Eiffel Tower in Paris, France?</p><br>
            <input name="height" type="radio" value="584ft" id="584ft"><label for="584ft">584ft</label><br>
            <input name="height" type="radio" value="584ft" id="784ft"><label for="784ft">784ft</label><br>
            <input name="height" type="radio" value="584ft" id="984ft"><label for="984ft">984ft</label><br>
            <input name="height" type="radio" value="584ft" id="1184ft"><label for="1184ft">1184ft</label>
        </fieldset>
        <fieldset>
            <legend><i>Tiebreaker Question</i></legend>
            <label>In 25 words or less, say why you would like to win $10,000:</label><br>
            <textarea name="tiebreaker" id="tiebreaker" cols="30" rows="10"></textarea>
        </fieldset>
        <fieldset>
            <button type="submit">Enter competition</button>
        </fieldset>
    </form>
    <div class="output">
        @if (ViewContext.HttpContext.Request.Method == "POST")
        {
            <h2>Submitted Data:</h2>
            <p><strong>First Name:</strong> @Model.Fname</p>
            <p><strong>Last Name:</strong> @Model.Lname</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Height:</strong> @Model.Height</p>
            <p><strong>Tiebreaker:</strong> @Model.Tiebreaker</p>
        }
    </div>
</body>
</html>